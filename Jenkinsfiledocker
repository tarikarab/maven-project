pipeline {
    agent any


    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
                sh 'pwd'
                sh 'users'
                sh "sudo docker build . -t tomcatwebapp:${env.BUILD_ID}"
            }
            post {
                success {
                    echo 'Now Archiving...'
                }
            }
        }

    }
}